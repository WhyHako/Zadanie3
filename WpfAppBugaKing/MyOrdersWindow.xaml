<Window x:Class="WpfAppBugaKing.MyOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBugaKing"
        mc:Ignorable="d"
        Title="BugaKing" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Height="300" VerticalAlignment="Top" x:Name="MyOrders_Grider">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding TotalAmount}"/>
                <DataGridTextColumn Header="Время" Binding="{Binding OrderDateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Back" Content="Назад" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Back_Click"/>
        <Image Source="img/image.png" Width="100" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
